    <data>

        <variable
            name="mapToolViewModel"
            type="com.otitan.ui.vm.MapToolViewModel" />
    </data>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/share_tckz"
                style="@style/mapTool_imageButton"
                android:layout_marginBottom="100dp"
                android:background="@drawable/map_tools_bg"
                android:contentDescription="@null"
                android:src="@drawable/icon_tcqh" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/share_isearch"
                style="@style/mapTool_imageButton"
                android:layout_marginTop="40dp"
                android:background="@drawable/map_tools_bg"
                android:contentDescription="@null"
                android:src="@drawable/icon_sxcx" />

            <ImageButton
                android:id="@+id/ib_distance"
                style="@style/mapTool_imageButton"
                android:background="@drawable/map_tools_bg"
                android:contentDescription="@null"
                android:src="@drawable/ico_distance" />

            <ImageButton
                android:id="@+id/ib_sketch"
                style="@style/mapTool_imageButton"
                android:layout_width="wrap_content"
                android:background="@drawable/map_tools_bg"
                android:contentDescription="@null"
                android:src="@drawable/icon_tj" />

            <ImageButton
                android:id="@+id/ib_clean"
                style="@style/mapTool_imageButton"
                android:background="@drawable/map_tools_bg"
                android:contentDescription="@null"
                android:src="@drawable/icon_sc" />

            <ImageButton
                android:id="@+id/ib_location"
                style="@style/mapTool_imageButton"
                android:background="@drawable/map_tools_bg"
                android:contentDescription="@null"
                android:src="@drawable/icon_dw" />
        </LinearLayout>


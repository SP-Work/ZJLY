<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--左侧地图工具——按钮样式-->
    <style name="mapTool_imageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <!--左侧地图工具——按钮样式-->
    <style name="mapTool_imageButton_pad">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <!--底部编辑工具——按钮样式-->
    <style name="editTool_testView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">1.5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="rb_xbbj">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <!--弹框标题-->
    <style name="tv_dialogtitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dialog_title</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- 图层控制CheckBox 样式 -->
    <style name="tckzCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/custom_checkbox_selector</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:textSize">17sp</item>
    </style>
    <!-- 图层控制定位图层按钮样式 -->
    <style name="tckz_loc_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/background_view_rounded_image</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:src">@drawable/icon_map_loction</item>
    </style>

    <!--底部radiobutton-->
    <style name="style_RadioButton">
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@drawable/rb_focus_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--首页导航栏-->
    <style name="home_toolbar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/ToolbarTheme</item>
    </style>
    <!--导航栏-->
    <style name="toolbar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/ToolbarTheme</item>
    </style>

    <!-- ToolBar菜单样式 -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@color/white</item> <!--  颜色-->
        <item name="android:textSize">18sp</item> <!--  字体大小-->
    </style>
    <!-- toolbar标题样式 -->
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="FetionTheme.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">#ff747474</item>
        <item name="android:textSize">18sp</item>
        <item name="android:scrollbarSize">3dp</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="FetionTheme.Dialog.Toast" parent="@style/FetionTheme.Dialog">
        <item name="android:background">@drawable/toast_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="mysetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/background_view_rounded_white</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>
